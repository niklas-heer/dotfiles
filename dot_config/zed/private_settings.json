// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "always_allow_tool_actions": true
  },
  "theme": "Tokyo Night",
  "soft_wrap": "editor_width",
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": "comfortable",
  "telemetry": { "diagnostics": true, "metrics": false },
  "terminal": {
    "shell": {
      "program": "nu"
    },
    "font_family": "JetBrainsMono Nerd Font",
    "blinking": "off"
  },
  "experimental.theme_overrides": {
    "terminal.background": "#1E1F29"
  },
  "file_types": {
    "JavaScript": ["jxa", "js", "jsx", "mjs", "cjs"],
    "TypeScript": ["ts", "tsx"]
  },
  // https://zed.dev/docs/configuring-zed#auto-install-extensions
  // for the names: ls `~/Library/Application Support/Zed/extensions/installed/` (nushell)
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "asciidoc": true,
    "earthfile": true,
    "elixir": true,
    "make": true,
    "nu": true,
    "ruby": true,
    "tokyo-night": true,
    "lua": true,
    "docker-compose": true,
    "terraform": true,
    "toml": true
  }
}
